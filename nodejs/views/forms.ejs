<%- include('header.ejs') %>

    <h1>Forms</h1>    
    <form action="/forms" method="POST">
        <input type="text" name="title" placeholder="Title">
        <input type="text" name="author" placeholder="Author">
        <button type="submit">Submit</button>
    </form>


    <h1><%=title%></h1>  
    <h2><%=now%></h2>  
    <% if(blogs.length) { %>
        <% blogs.forEach(article => { %>
            <h2><%=article.title%></h2>
            <p><%=article.author%></p>
        <% }) %>
    <% } %>
    
